{
  "name": "Japanese Flashcards",
  "description": "Pops up flashcards at times to help you learn Japanese words. \n\nYou can add, edit or delete your own flashcards and customize how the cards appear, the order of the hints shown and many more.\n\n",
  "version": "0.1",
  "icons": {
    "16": "images/logo-32.png",
    "32": "images/logo-32.png",
    "48": "images/logo-48.png",
    "128": "images/logo-128.png"
  },
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": {
      "38": "images/logo-plain-256.png"
    },
    "default_title": "Japanese Flashcards",
    "default_popup": "options.html"
  },
  "permissions": [
    "tabs",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],
  "manifest_version": 2,
  "web_accessible_resources": [
    "flashcards.json"
  ]
}
